<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Newsshots" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.NewsshotsSplash" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="android:windowSplashScreenAnimationDuration">0</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="postSplashScreenTheme">@style/Theme.Newsshots</item>
        <item name="android:windowLayoutInDisplayCutoutMode">default</item>
        <item name="android:windowSplashScreenBackground">@color/app_primary_color</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
</resources>